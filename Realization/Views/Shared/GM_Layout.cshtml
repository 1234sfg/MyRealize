
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/vue")
        <script type="text/javascript" src="../../Scripts/vue.js"></script>
        <script type="text/javascript">
        /*  判断是否登录 */
       // var list = JSON.parse('@Html.Raw(ViewBag.list)');引入viewbag的数组
        window.onload = function () {
            var GMuser = "@Session["GMUsers"]";
            function GMdenglu() {
            if (GMuser == null || GMuser == "") { alert('请登录'); window.location.href = "../GM/Login";return false; }
            else { alert('你好，管理员' + GMuser); window.location.href = "#"; }
            }
            var login = true;
            if (GMuser == "" || GMuser == null) { login = true; }
            else { login = false; }
            var xyzNavbar = new Vue({
                el: '#xyz-GMHead',		//我认为是个选择器。
                data: {			//里边放参数，下边对参数进行赋值
                    login:login        //如果false不显示
                }
            });
        }
        </script>
    <style>
        .xyz-link{cursor:pointer;font-size:14px;color:crimson;}
            .xyz-link:hover {color:red;}
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top " id="xyz-GMHead">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("立荣电器", "Index", "GM", new { area = "" }, new { @class = "navbar-brand" })
            </div>
           <!-- 剪切掉了A  -->
        </div>
    </div>
    <div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year 立荣电器商店</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
